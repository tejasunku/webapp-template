{
  "name": "db-service",
  "version": "0.1.0",
  "description": "Database service with Drizzle ORM and Supabase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "drizzle-orm": "^0.30",
    "postgres": "^3",
    "@supabase/supabase-js": "^2",
    "valibot": "^0.30",
    "@shared/utils": "workspace:*",
    "@shared/schemas": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20",
    "bun-types": "^1",
    "drizzle-kit": "^0.20",
    "vitest": "^1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js"
    }
  },
  "files": [
    "dist"
  ]
}